<UserControl x:Class="Abc.NCrafts.App.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Abc.NCrafts.App.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="626.746" d:DesignWidth="1039.284" d:DataContext="{d:DesignInstance viewModels:WelcomePage}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../SharedResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="220" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="180" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="4" Grid.Row="0" Background="#FFB800" Margin="0 0 0 0">
            <Border.Effect>
                <DropShadowEffect Direction="270" Opacity="0.3" ShadowDepth="3" />
            </Border.Effect>
            <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                <Image
                    HorizontalAlignment="Left" VerticalAlignment="Center" Source="../ABCLogo.png"
                    RenderOptions.BitmapScalingMode="HighQuality" Width="128" Height="128" />
                <Label Content="C# Heap Allocation Quizz" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="60" FontFamily="Segoe UI Light" Margin="10" Padding="40 0 0 0" />
            </StackPanel>
        </Border>

        <StackPanel Grid.ColumnSpan="4" Grid.Row="1" VerticalAlignment="Center">
            <Label Content="Will you be able to hunt heap allocations?" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="40" FontFamily="Segoe UI Light" />
            <Label Content="Will you be able to stay away from the GC?" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="40" FontFamily="Segoe UI Light" />
            <Label Content="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"
                   FontFamily="Segoe UI Light" />
            <Label Content="Take the test and you'll find out while seizing the opportunity to win a Raspberry Pi!"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" FontFamily="Segoe UI Light" />
        </StackPanel>

        <Border Grid.ColumnSpan="4" Grid.Row="2" Background="#565656" Margin="0 0 0 0">
            <Border.Effect>
                <DropShadowEffect Direction="90" Opacity="0.3" ShadowDepth="3" />
            </Border.Effect>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 10 0">

                <Button Command="{Binding GoToNextCommand}"
                        Content="Take the quizz" Width="176" Height="50"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />

            </StackPanel>
        </Border>

    </Grid>

</UserControl>