<UserControl x:Class="Abc.NCrafts.App.Views.EndView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Abc.NCrafts.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="667" d:DesignWidth="939" d:DataContext="{d:DesignInstance viewModels:EndPage}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../SharedResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="180" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="4" Grid.Row="0" Background="#FFB800" Margin="0 0 0 0">
            <Border.Effect>
                <DropShadowEffect Direction="270" Opacity="0.3" ShadowDepth="3" />
            </Border.Effect>
            <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                <Label Content="Well done!" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="60" FontFamily="Segoe UI Light" Margin="10" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontFamily="Segoe UI Light">
                   <Run>You answered&#160;</Run><Run Text="{Binding Path=AnsweredQuestionCount, Mode=OneWay}"/><Run>&#160;question(s) correctly</Run>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontFamily="Segoe UI Light">
                   <Run>Your score is&#160;</Run><Run Text="{Binding Path=Score, Mode=OneWay}" FontSize="60" Foreground="#FFB800"/><Run>&#160;point(s)</Run>
            </TextBlock>
           
        </StackPanel>

        <Border Grid.ColumnSpan="4" Grid.Row="2" Background="#565656" Margin="0 0 0 0">
            <Border.Effect>
                <DropShadowEffect Direction="90" Opacity="0.3" ShadowDepth="3" />
            </Border.Effect>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 10 0">

                <Button Command="{Binding GoToNextCommand}"
                        Content="OK" Width="176" Height="50"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center" Margin="10 0" />

            </StackPanel>
        </Border>

    </Grid>

</UserControl>
